#!/usr/bin/env bash
s_out=""
while [[ $# -gt 0 ]]; do
    case $1 in
        -o) s_out="$2"; shift 2 ;;
        *)  shift ;;
    esac
done

[[ -z "$s_out" ]] && exit 1

cat > "$s_out" << 'HTML'
<!DOCTYPE html>
<html>
<head>
<title>stub</title>
<style>
</style>
</head>
<body>
<h1>Stub Output</h1>
<p>Generated by pandoc stub.</p>
</body>
</html>
HTML
